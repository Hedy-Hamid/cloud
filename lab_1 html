<label> Name</label> <input type="text" id= "username">
<button id="btn"> Run it</button>


<script> 
document.getElementById("btn").addEventListener("click",addName); 
function addName()
{
    var uname = document.getElementById("username").value;  //get content of text box
    google.script.run.userClicked(uname);                   //Call function (userClicked) frome google script file
    document.getElementById("username").value="";           // clear text box
}

</script>


